<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="dodasoft_instagram_widget" class="DodaSoft\Instagram\Block\Widget\Instagram">
        <label>DodaSoft - Instagram Widget</label>
        <description>DodaSoft - Instagram Widget</description>
        <parameters>
            <parameter name="noOfImages" xsi:type="text" visible="true" required="true" sort_order="10">
                <label>Number of instagram media images to display</label>
                <description>Default is 10, maximum is 50 - Keep in mind images are loading from external source, it could take time to load if number is high.</description>
                <value>10</value>
            </parameter>
            <parameter name="autoplay" xsi:type="select" visible="true" required="true" sort_order="20">
                <label>Autoplay</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label>On</label>
                    </option>
                    <option name="0" value="0">
                        <label>Off</label>
                    </option>
                </options>
            </parameter>
            <parameter name="loop" xsi:type="select" visible="true" required="true" sort_order="30">
                <label>Loop</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label>On</label>
                    </option>
                    <option name="0" value="0">
                        <label>Off</label>
                    </option>
                </options>
            </parameter>
            <parameter name="hoverPause" xsi:type="select" visible="true" required="true" sort_order="40">
                <label>Pause on hover</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label>On</label>
                    </option>
                    <option name="0" value="0">
                        <label>Off</label>
                    </option>
                </options>
            </parameter>
            <parameter name="showNav" xsi:type="select" visible="true" required="true" sort_order="50">
                <label>Show navigation</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label>On</label>
                    </option>
                    <option name="0" value="0">
                        <label>Off</label>
                    </option>
                </options>
            </parameter>
            <parameter name="showDots" xsi:type="select" visible="true" required="true" sort_order="60">
                <label>Show dots</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label>On</label>
                    </option>
                    <option name="0" value="0">
                        <label>Off</label>
                    </option>
                </options>
            </parameter>
            <parameter name="slideBy" xsi:type="text" visible="true" required="true" sort_order="70">
                <label>Slide by</label>
                <description>How many slides to skip when user clicks on arrow</description>
                <value>1</value>
            </parameter>
            <parameter name="rtl" xsi:type="select" visible="true" required="true" sort_order="80">
                <label>Right to left</label>
                <options>
                    <option name="1" value="1">
                        <label>On</label>
                    </option>
                    <option name="0" value="0" selected="true">
                        <label>Off</label>
                    </option>
                </options>
            </parameter>
            <parameter name="margin" xsi:type="text" visible="true" required="true" sort_order="90">
                <label>Margin between slides</label>
                <description>Default is 10 - in px</description>
                <value>10</value>
            </parameter>
            <parameter name="itemsDefault" xsi:type="text" visible="true" required="true" sort_order="100">
                <label>Default No of slides</label>
                <description>Default is 5</description>
                <value>5</value>
            </parameter>
            <parameter name="itemsTablet" xsi:type="text" visible="true" required="true" sort_order="110">
                <label>Tablet No of slides</label>
                <description>Default is 3</description>
                <value>3</value>
            </parameter>
            <parameter name="itemsMobile" xsi:type="text" visible="true" required="true" sort_order="120">
                <label>Mobile No of slides</label>
                <description>Default is 1</description>
                <value>1</value>
            </parameter>
            <parameter name="displayBackBlurredImage" xsi:type="select" visible="true" required="true" sort_order="130">
                <label>Display image also as blurred background image</label>
                <options>
                    <option name="1" value="1">
                        <label>Yes</label>
                    </option>
                    <option name="0" value="0" selected="true">
                        <label>No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="centerItemsVertically" xsi:type="select" visible="true" required="true" sort_order="140">
                <label>Center images vertically</label>
                <options>
                    <option name="1" value="1">
                        <label>Yes</label>
                    </option>
                    <option name="0" value="0" selected="true">
                        <label>No</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
